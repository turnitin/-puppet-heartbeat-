# !!! generated by puppet !!!

# Heartbeat logging configuration
logfile /var/log/heartbeat

<% if virtual == 'openvzve' %>
realtime off
<% end %>
crm off
msgfmt netstring

# Heartbeat cluster members
node <%= scope.lookupvar('heartbeat::nodes')[0] %>
node <%= scope.lookupvar('heartbeat::nodes')[1] %>

# Heartbeat communication timing
keepalive 2
warntime 10
deadtime 20
initdead 20

# Heartbeat communication paths
udpport <%= scope.lookupvar('heartbeat::udpport') %>
ucast <%= scope.lookupvar('heartbeat::ucastIf') %> <%= scope.lookupvar('heartbeat::nodes')[0] %>
ucast <%= scope.lookupvar('heartbeat::ucastIf') %> <%= scope.lookupvar('heartbeat::nodes')[1] %>

# Failback behavior
auto_failback <%= scope.lookupvar('heartbeat::autoFailback') %>

